<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/backgroundGray"
    android:padding="15dp"
    tools:context="com.sukajee.splitexpense.JoinCreateCircleFragment">

    <TextView
        android:id="@+id/textViewHelloFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Hello firstName"
        android:layout_marginTop="30dp"
        android:textSize="30sp"
        android:gravity="start"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/textViewWelcomeToTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/textViewHelloFirstName"
        android:text="Welcome to Split Expense"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/textViewLooksLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="start"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/textViewWelcomeToTeam"
        android:text="Looks like you are not associated with any circle yet. Don't worry, you can either create a circle or join one."
        android:textSize="18sp"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/textViewIfYouHave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="start"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/textViewLooksLike"
        android:text="Have an invitation code? Join a circle."
        android:textSize="18sp"
        android:textColor="@color/colorAccent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonJoinCircle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_rounded"
        android:text="Join Circle"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/textViewIfYouHave"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/textViewNoCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="start"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toBottomOf="@id/buttonJoinCircle"
        android:text="Do not have an invitation code? Create a circle."
        android:textSize="18sp"
        android:textColor="@color/colorAccent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonCreateCircle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_rounded"
        android:text="Create Circle"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/textViewNoCode"
        app:layout_constraintStart_toStartOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>